<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_volunteer"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/k4"
                    android:scaleType="fitXY"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    >

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="판교노인종합복지관"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:gravity="left"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <Button
                        android:id="@+id/btn_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website Link"
                        android:textSize="19dp"
                        android:textColor="#fdfdfd"
                        android:layout_margin="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#3c3f41"
                        />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a3a2"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="봉사 내용"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:text="봉사내용 설명 봉사내용 설명 최대 3줄 제한!"
                android:lines="3"
                android:ellipsize="end"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a3a2"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                >

                <LinearLayout
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="연락처"
                        android:textSize="21dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="19dp"
                        android:text="031-324-3432"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/ib_phone_call"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phonecall"
                    android:backgroundTint="#00ffffff"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a3a2"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    >

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:textSize="21dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경기도 성남시 분당구 판교역로 99"
                        android:lines="2"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/ib_map"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/placeholder"
                    android:backgroundTint="#00ffffff"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a3a2"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가천대 ~ 봉사기관 (대중교통)"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tv_dist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35분"
                android:textSize="19dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
